          ></path>
          <path
            d="M0,0V5.63C149.93,59,314.09,71.32,475.83,42.57c43-7.64,84.23-20.12,127.61-26.46,59-8.63,112.48,12.24,165.56,35.4C827.93,77.22,886,95.24,951.2,90c86.53-7,172.46-45.71,248.8-84.81V0Z"
            class="shape-fill"
          ></path>
        </svg>
      </div>
    </section>

    <section class="all-accounts-table">
      <h4 class="text-center fw-bold mb-5 mx-1 mx-md-4 mt-4">Accounts</h4>
      <div class="container all-accounts-table-container overflow-scroll">
        <table class="table table-responsive">
          <thead>
            <tr>
              <th scope="col">ID</th>
              <th scope="col">User ID</th>
              <th scope="col">Account Number</th>
              <th scope="col">Account Type</th>
              <th scope="col">Balance</th>
            </tr>
          </thead>
          <tbody
            id="account-table-Body"
            class="table-group-divider table-divider-color"
          ></tbody>
        </table>
      </div>
    </section>

    <section class="all-transactions-table">
      <h4 class="text-center fw-bold mb-5 mx-1 mx-md-4 mt-4">Transactions</h4>
      <div class="container all-transactions-table-container overflow-scroll">
        <table class="table table-responsive">
          <thead>
            <tr>
              <th scope="col">ID</th>
              <th scope="col">User ID</th>
              <th scope="col">Account ID</th>
              <th scope="col">Transaction Type</th>
              <th scope="col">Amount</th>
              <th scope="col">Description</th>
            </tr>
          </thead>
          <tbody
            id="transaction-table-Body"
            class="table-group-divider table-divider-color"
          ></tbody>
        </table>
      </div>
    </section>

    <div
      class="offcanvas offcanvas-bottom h-auto"
      tabindex="-1"
      id="createAccount"
      aria-labelledby="offcanvasLabel"
    >
      <div class="offcanvas-header">
        <h5 class="offcanvas-title" id="offcanvasLabel">Create an account</h5>
        <button
          type="button"
          class="btn-close text-reset"
          data-bs-dismiss="offcanvas"
          aria-label="Close"
        ></button>
      </div>
      <div class="offcanvas-body">
        <form action="api/accounts/" method="POST">
          <div data-mdb-input-init class="form-outline mb-4">
            <input
              type="text"
              class="form-control"
              placeholder="User ID"
              name="user_id"
            />
          </div>

          <div data-mdb-input-init class="form-outline mb-4">
            <input
              type="text"
              class="form-control"
              placeholder="Account Type"
              name="account_type"
            />
          </div>

          <!-- Submit button -->
          <button
            data-mdb-ripple-init
            type="submit"
            class="btn form-btn btn-block mb-4 w-100"
          >
            Create Account
          </button>
        </form>
      </div>
    </div>

    <div
      class="offcanvas offcanvas-start"
      tabindex="-1"
      id="graph"
      aria-labelledby="offcanvasLabel"
    >
      <div class="offcanvas-header">
        <h5 class="offcanvas-title" id="offcanvasLabel">Transactions</h5>
        <button
          type="button"
          class="btn-close text-reset"
          data-bs-dismiss="offcanvas"
          aria-label="Close"
        ></button>
      </div>
      <div class="offcanvas-body">
        <canvas id="myChart"></canvas>
      </div>
    </div>

    <a
      href="#graph"
      class="p-2 text-white w-100 fixed-bottom text-center chart-btn"
      data-bs-toggle="offcanvas"
      role="button"
      aria-controls="createAccount"
      >Charts
    </a>

    <%- include("./partials/generalFooter.ejs") %>
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script src="js/dashboard.js"></script>
  </body>
</html>
