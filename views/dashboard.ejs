<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include("./partials/generalHeader.ejs") %>
    <link rel="stylesheet" href="css/dashboard.css" />
  </head>
  <body>
    <%- include("./partials/dashboardNavbar.ejs") %>

    <section class="section-transfer-deposit-forms p-3 py-md-5">
      <div
        class="container transfer-deposit-container d-flex flex-column d-md-flex flex-md-row justify-content-center align-items-center gap-5"
      >
        <div class="transfer-form">
          <p class="text-center h4 fw-bold mb-5 mx-1 mx-md-4 mt-4">Transfer</p>
          <form
            action="api/transactions/"
            method="POST"
            style="width: 22rem"
            id="transfer-form"
          >
            <div data-mdb-input-init class="form-outline mb-4">
              <input
                type="text"
                class="form-control"
                placeholder="user_id"
                name="user_id"
                id="transfer-user-id-input"
                required
              />
            </div>

            <div data-mdb-input-init class="form-outline mb-4">
              <select
                class="form-select accountSelect"
                name="account_id"
                id="transfer-account-select"
                required
              >
                <option value="" selected disabled>Select your account</option>
              </select>
            </div>

            <div data-mdb-input-init class="form-outline mb-4">
              <select
                class="form-select recieverSelect"
                name="reciever"
                id="transfer-reciever-select"
                required
              >
                <option value="" selected disabled>Select Reciever</option>
              </select>
            </div>

            <div data-mdb-input-init class="form-outline mb-4">
              <input
                type="text"
                class="form-control d-none"
                placeholder="type"
                name="type"
                value="transfer"
                id="transfer-type-input"
              />
            </div>

            <div data-mdb-input-init class="form-outline mb-4">
              <input
                type="number"
                class="form-control"
                placeholder="amount"
                name="amount"
                id="transfer-amount-input"
                required
              />
            </div>

            <div data-mdb-input-init class="form-outline mb-4">
              <input
                type="text-area"
                class="form-control"
                placeholder="description"
                name="description"
                id="transfer-description-input"
              />
            </div>

            <div
              class="alert alert-danger d-none d-flex flex-row align-items-center"
              id="transfer-error-msg"
            >
              <i class="fas fa-circle-exclamation me-3 fa-fw"></i>
            </div>

            <!-- Submit button -->
            <button
              data-mdb-ripple-init
              type="submit"
              class="btn form-btn btn-block mb-4 w-100"
              id="transfer-submit-btn"
            >
              Make a Transfer
            </button>
          </form>
        </div>

        <!-- DEPOSIT FORM -->

        <div class="deposit-form">
          <p class="text-center h4 fw-bold mb-5 mx-1 mx-md-4 mt-4">Deposit</p>

          <form
            action="api/transactions/"
            method="POST"
            style="width: 22rem"
            id="deposit-form"
          >
            <div data-mdb-input-init class="form-outline mb-4">
              <input
                type="text"
                class="form-control"
                placeholder="user_id"
                name="user_id"
                id="deposit-user-id-input"
              />
            </div>

            <div data-mdb-input-init class="form-outline mb-4">
              <select
                class="form-select accountSelect"
                name="account_id"
                id="deposit-account-select"
              >
                <option value="" selected disabled>Select your account</option>
              </select>
            </div>

            <div data-mdb-input-init class="form-outline mb-4">
              <input
                type="text"
                class="form-control d-none"
                placeholder="type"
                name="type"
                value="deposit"
                id="deposit-type-input"
              />
            </div>

            <div data-mdb-input-init class="form-outline mb-4">
              <input
                type="number"
                class="form-control"
                placeholder="amount"
                name="amount"
                id="deposit-amount-input"
              />
            </div>

            <div data-mdb-input-init class="form-outline mb-4">
              <input
                type="text-area"
                class="form-control"
                placeholder="description"
                name="description"
                id="deposit-description-input"
              />
            </div>

            <div
              class="alert alert-danger d-none d-flex flex-row align-items-center"
              id="deposit-error-msg"
            >
              <i class="fas fa-circle-exclamation me-3 fa-fw"></i>
            </div>

            <!-- Submit button -->
            <button
              data-mdb-ripple-init
              type="submit"
              class="btn form-btn btn-block mb-4 w-100"
              id="deposit-submit-btn"
            >
              Make a Deposit
            </button>
          </form>
        </div>
      </div>

      <div class="transfer-deposit-curve">
        <svg
          data-name="Layer 1"
          xmlns="http://www.w3.org/2000/svg"
          viewBox="0 0 1200 120"
          preserveAspectRatio="none"
        >
          <path
            d="M0,0V46.29c47.79,22.2,103.59,32.17,158,28,70.36-5.37,136.33-33.31,206.8-37.5C438.64,32.43,512.34,53.67,583,72.05c69.27,18,138.3,24.88,209.4,13.08,36.15-6,69.85-17.84,104.45-29.34C989.49,25,1113-14.29,1200,52.47V0Z"
            opacity=".25"
            class="shape-fill"
          ></path>
          <path
            d="M0,0V15.81C13,36.92,27.64,56.86,47.69,72.05,99.41,111.27,165,111,224.58,91.58c31.15-10.15,60.09-26.07,89.67-39.8,40.92-19,84.73-46,130.83-49.67,36.26-2.85,70.9,9.42,98.6,31.56,31.77,25.39,62.32,62,103.63,73,40.44,10.79,81.35-6.69,119.13-24.28s75.16-39,116.92-43.05c59.73-5.85,113.28,22.88,168.9,38.84,30.2,8.66,59,6.17,87.09-7.5,22.43-10.89,48-26.93,60.65-49.24V0Z"
            opacity=".5"
            class="shape-fill"
          ></path>
          <path
            d="M0,0V5.63C149.93,59,314.09,71.32,475.83,42.57c43-7.64,84.23-20.12,127.61-26.46,59-8.63,112.48,12.24,165.56,35.4C827.93,77.22,886,95.24,951.2,90c86.53-7,172.46-45.71,248.8-84.81V0Z"
            class="shape-fill"
          ></path>
        </svg>
      </div>
    </section>

    <section class="all-accounts-table">
      <h4 class="text-center fw-bold mb-5 mx-1 mx-md-4 mt-4">Accounts</h4>
      <div
        class="container all-accounts-table-container overflow-scroll table-height-400"
      >
        <table class="table table-responsive">
          <thead>
            <tr>
              <th scope="col">ID</th>
              <th scope="col">User ID</th>
              <th scope="col">Account Number</th>
              <th scope="col">Account Type</th>
              <th scope="col">Balance</th>
            </tr>
          </thead>
          <tbody
            id="account-table-Body"
            class="table-group-divider table-divider-color"
          ></tbody>
        </table>
      </div>
    </section>

    <section class="all-transactions-table pb-5">
      <h4 class="text-center fw-bold mb-5 mx-1 mx-md-4 mt-4">Transactions</h4>
      <div
        class="container all-transactions-table-container overflow-scroll table-height-400"
      >
        <table class="table table-responsive">
          <thead>
            <tr>
              <th scope="col">ID</th>
              <th scope="col">User ID</th>
              <th scope="col">Account ID</th>
              <th scope="col">Transaction Type</th>
              <th scope="col">Amount</th>
              <th scope="col">Description</th>
            </tr>
          </thead>
          <tbody
            id="transaction-table-Body"
            class="table-group-divider table-divider-color"
          ></tbody>
        </table>
      </div>
    </section>

    <div
      class="offcanvas offcanvas-bottom h-auto"
      tabindex="-1"
      id="createAccount"
      aria-labelledby="offcanvasLabel"
    >
      <div class="offcanvas-header">
        <h5 class="offcanvas-title" id="offcanvasLabel">Create an account</h5>
        <button
          type="button"
          class="btn-close text-reset"
          data-bs-dismiss="offcanvas"
          aria-label="Close"
        ></button>
      </div>
      <div class="offcanvas-body">
        <form action="api/accounts/" method="POST">
          <div data-mdb-input-init class="form-outline mb-4">
            <input
              type="text"
              class="form-control"
              placeholder="User ID"
              name="user_id"
            />
          </div>

          <div data-mdb-input-init class="form-outline mb-4">
            <input
              type="text"
              class="form-control"
              placeholder="Account Type"
              name="account_type"
            />
          </div>

          <!-- Submit button -->
          <button
            data-mdb-ripple-init
            type="submit"
            class="btn btn-block mb-4 w-100 create-btn"
          >
            Create Account
          </button>
        </form>
      </div>
    </div>

    <div
      class="offcanvas offcanvas-start"
      tabindex="-1"
      id="graph"
      aria-labelledby="offcanvasLabel"
    >
      <div class="offcanvas-header">
        <h5 class="offcanvas-title" id="offcanvasLabel">Visualisation</h5>
        <button
          type="button"
          class="btn-close text-reset"
          data-bs-dismiss="offcanvas"
          aria-label="Close"
        ></button>
      </div>
      <div class="offcanvas-body">
        <h5>Account Balance</h5>
        <div class="accounts-chart mb-5">
          <canvas id="accountsChart"></canvas>
        </div>

        <h5>Transactions</h5>
        <div class="transactions-chart">
          <canvas id="myChart"></canvas>
        </div>
      </div>
    </div>

    <a
      href="#graph"
      class="p-2 text-white w-100 fixed-bottom text-center chart-btn"
      data-bs-toggle="offcanvas"
      role="button"
      aria-controls="createAccount"
      >Charts
    </a>

    <%- include("./partials/generalFooter.ejs") %>
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script src="js/dashboard.js"></script>
  </body>
</html>
